<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/ll_error_handling"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center"
              android:visibility="gone"
              tools:visibility="visible"
              android:gravity="center">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_error"
            android:layout_width="@dimen/spacing_huge_xxx"
            android:layout_height="@dimen/spacing_huge_xxx"
            android:layout_marginBottom="@dimen/spacing_x"
            tools:srcCompat="@drawable/icon_no_data"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_error_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="@style/TextParagraph1"
            tools:text="Koneksi Tidak Ditemukan"
            android:layout_marginBottom="@dimen/spacing_x"/>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing"
            android:background="@drawable/ghost_button"
            android:textAppearance="@style/TextParagraph2"
            android:text="@string/core_retry"/>

</androidx.appcompat.widget.LinearLayoutCompat>